{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "location1": {
      "type": "string"
    },
    "location2": {
      "type": "string"
    },
    "connectionName1": {
      "type": "string"
    },
    "connectionName2": {
      "type": "string"
    },
    "sharedKey": {
      "type": "string"
    },
    "gateway1Id": {
      "type": "string"
    },
    "gateway2Id": {
      "type": "string"
    }
  },
  "variables": {
  },
  "resources": [

    // Connection - West to East
    {
      "apiVersion": "2015-05-01-preview",
      "type": "Microsoft.Network/connections",
      "name": "[parameters('connectionName1')]",
      "location": "[parameters('location1')]",
      "properties": {
        "virtualNetworkGateway1": {
          "id": "[parameters('gateway1Id')]"
        },
        "virtualNetworkGateway2": {
          "id": "[parameters('gateway2Id')]"
        },
        "connectionType": "Vnet2Vnet",
        "routingWeight": 3,
        "sharedKey": "[parameters('sharedKey')]"
      }
    },
    // End Connection - West to East

    // Connection - East to West
    {
      "apiVersion": "2015-05-01-preview",
      "type": "Microsoft.Network/connections",
      "name": "[parameters('connectionName2')]",
      "location": "[parameters('location2')]",
      "properties": {
        "virtualNetworkGateway1": {
          "id": "[parameters('gateway2Id')]"
        },
        "virtualNetworkGateway2": {
          "id": "[parameters('gateway1Id')]"
        },
        "connectionType": "Vnet2Vnet",
        "routingWeight": 3,
        "sharedKey": "[parameters('sharedKey')]"
      }
    }
    // End Connection - East to West
  ]
}
